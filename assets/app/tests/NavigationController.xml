	<BasicCanvas position="static" class="btContainer">
		<Button effect="alpha" position="static" class="btn">
			<Label position="static" text="pre" />
			<Click>
				<NavigationEvent controllerId="nav" showIdx="pre" />
			</Click>
		</Button>
		<Button effect="alpha" position="static" class="btn">
			<Label position="static" text="next" />
			<Click>
				<NavigationEvent controllerId="nav" showIdx="next" />
			</Click>
		</Button>
		<Button effect="alpha" position="static" class="btn">
			<Label position="static" text="showIdx:3" />
			<Click>
				<NavigationEvent controllerId="nav" showIdx="3">
					<onComplete>
						<Alert msg="complete"/>
					</onComplete>
				</NavigationEvent>
			</Click>
		</Button>
	</BasicCanvas>
</BasicCanvas>