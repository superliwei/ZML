<?xml version="1.0" encoding="utf-8"?>
<BasicCanvas>
	<Label x="10" y="10" text="Button" color="#ffffff" background="#333333" padding="3" font-weight="bold"/>
	<BasicCanvas x="10" y="40" background="#222222" width="780" height="460">
		<Button effect="alpha">
			<Label x="10" y="10" padding="3px" text="Button" border-radius="3px" background="#ffffff" />
			<Click>
				<Alert msg="Button Clicked !" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label x="10" y="40" padding="3px" text="touchMode" border-radius="3px" background="#ffffff" />
			<Click>
				<Alert msg="Button Clicked !" />
			</Click>
		</Button>
		<Button id="cbt" effect="alpha" enabled="false">
			<Label x="10" y="70" width="155" padding="3px" text="mouseEnable Control" border-radius="3px" background="#ffffff" />
			<Click>
				<Alert msg="Button Clicked !" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label x="200" y="70" padding="3px" text="enable" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="cbt" action="set" enabled="true" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label x="260" y="70" padding="3px" text="disable" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="cbt" action="set" enabled="false" />
			</Click>
		</Button>
	</BasicCanvas>
</BasicCanvas>