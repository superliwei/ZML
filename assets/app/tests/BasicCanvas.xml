<?xml version="1.0" encoding="utf-8"?>
<BasicCanvas>
	<Label x="10" y="10" text="BasicCanvas" color="#ffffff" background="#333333" padding="3" font-weight="bold"/>
	<BasicCanvas x="10" y="40" background="#222222" width="780" height="460">
		<BasicCanvas id="mybox" x="10" y="10" width="100" height="100" border="solid 1px #ffffff" background="#000000" />

		<Button effect="alpha" touchMode="true">
			<Label x="10" y="200" padding="3px" text="x:20" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="mybox" action="set" x="20" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label x="55" y="200" padding="3px" text="y:20" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="mybox" action="set" y="20" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label x="100" y="200" padding="3px" text="width:50" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="mybox" action="set" width="50" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label x="176" y="200" padding="3px" text="height:50" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="mybox" action="set" height="50" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label x="260" y="200" padding="3px" text="scaleX:0.5" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="mybox" action="set" scaleX="0.5" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label x="350" y="200" padding="3px" text="scaleY:0.5" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="mybox" action="set" scaleY="0.5" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label x="440" y="200" padding="3px" text="rotate:45" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="mybox" action="set" rotate="45" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label x="523" y="200" padding="3px" text="alpha:0.5" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="mybox" action="set" alpha="0.5" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
