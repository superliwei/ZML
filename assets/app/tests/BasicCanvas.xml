				<CanvasEvent id="mybox" action="set" visible="false" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label width="200" x="10" y="230" padding="3px" text="border:solid 5px #ff0000" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="mybox" action="set" border="solid 5px #ff0000" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label x="220" y="230" padding="3px" text="background:#ffff00" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="mybox" action="set" background="#ffff00" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label width="150" x="375" y="230" padding="3px" text="border-radius:10px" border-radius="3px" background="#ffffff" />
			<Click>
				<CanvasEvent id="mybox" action="set" border-radius="10px" />
			</Click>
		</Button>
		<Button effect="alpha" touchMode="true">
			<Label x="10" y="260" padding="3px" text="reset" border-radius="3px" background="#3333ff" color="#ffffff" />
			<Click>
				<CanvasEvent id="mybox" action="set" x="10" y="10" width="100" height="100" border="solid 1px #ffffff" background="#000000" border-radius="0px" alpha="1" scaleX="1" scaleY="1" rotate="0" visible="true" />
			</Click>
		</Button>
	</BasicCanvas>
</BasicCanvas>