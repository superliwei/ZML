<?xml version="1.0" encoding="utf-8"?>
<HtmlCanvas>
	<style>
		.mainLayout
    	{
    		display: flex;
    		width: 100%;
    		height: 100%;
    		font-family: "微软雅黑";
    		background-color: #444444;
    	}
    	
    	.mainLayout .leftBox
    	{
    		min-width: 300px;
    		background-color: rgba(0,0,0,0.5);
    		display:flex;
    		flex-direction : column;
    	}
    	
    	.mainLayout .leftBox .header
    	{
    		padding: 15px;
    		border-bottom:solid 1px rgba(255,255,255,0.1);
    	}
    	
    	.mainLayout .leftBox .content
    	{
    		flex-grow : 1;
    		overflow:auto;
    	}
    	
    	.mainLayout .leftBox .content .item
    	{
    		padding:5px;
    		padding-left:15px;
    		padding-right:15px;
    		color:#666666;
    		cursor:default;
    		font-size:14px;
    	}
    	
    	.mainLayout .leftBox .content .item:hover
    	{
    		background:rgba(0,0,0,0.5);
    	}
    	
    	.mainLayout .leftBox .content .item:active
    	{
    		background:rgba(0,0,0,1);
    	}
    	
    	.mainLayout .leftBox .title
    	{
    		line-height: 50px;
    		font-size: 25px;
    		color: #FFFFFF;
    	}
    	
    	.mainLayout .leftBox .info
    	{
    		line-height: 30px;
    		font-size: 14px;
    		color: #666666;
    		font-family: "微软雅黑";
    	}
    	
    	.mainLayout .rightBox
    	{
    		flex-grow: 1;
    	}
	</style>
</HtmlCanvas>